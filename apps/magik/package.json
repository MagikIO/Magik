{
  "name": "@magik_io/magik",
  "version": "1.0.0",
  "description": "A powerful, plugin-based Express server framework with decorator-based routing, middleware presets, and lifecycle events",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./decorators": {
      "types": "./dist/decorators/index.d.ts",
      "import": "./dist/decorators/index.js"
    },
    "./factories": {
      "types": "./dist/factories/index.d.ts",
      "import": "./dist/factories/index.js"
    },
    "./plugins": {
      "types": "./dist/plugins/index.d.ts",
      "import": "./dist/plugins/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    },
    "./engines": {
      "types": "./dist/engines/index.d.ts",
      "import": "./dist/engines/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run build",
    "release": "pnpm run build && pnpm publish --access public"
  },
  "keywords": [
    "express",
    "server",
    "framework",
    "typescript",
    "decorators",
    "routing",
    "middleware",
    "plugin",
    "api",
    "rest",
    "magik"
  ],
  "author": "Abourass <github.com/Abourass>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MagikIO/Magik.git"
  },
  "bugs": {
    "url": "https://github.com/MagikIO/Magik/issues"
  },
  "homepage": "https://github.com/MagikIO/Magik#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "consola": "^3.2.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-serve-static-core": "^0.1.1",
    "fast-glob": "^3.3.2",
    "helmet": "^8.1.0",
    "method-override": "^3.0.0",
    "reflect-metadata": "^0.2.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@magik_io/magik-types": "workspace:*",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-serve-static-core": "^5.1.0",
    "@types/method-override": "^3.0.0",
    "@types/node": "^25.0.3",
    "gradient-string": "^3.0.0",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "zod": "^3.22.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  }
}
