{
  "name": "@magik_io/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Magik monorepo - Plugin-based Express server framework",
  "type": "module",
  "scripts": {
    "build": "pnpm -r --filter='!@magik_io/monorepo' run build",
    "dev": "pnpm -r --parallel run dev",
    "test": "pnpm -r run test",
    "typecheck": "pnpm -r run typecheck",
    "lint": "pnpm -r run lint",
    "format": "pnpm -r run format",
    "clean": "pnpm -r run clean",
    "changeset": "changeset",
    "bump": "changeset version",
    "release": "pnpm build && changeset publish --provenance",
    "release:local": "pnpm build && changeset publish"
  },
  "keywords": [
    "express",
    "server",
    "framework",
    "typescript",
    "monorepo",
    "magik"
  ],
  "author": "Abourass <github.com/Abourass>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MagikIO/Magik.git"
  },
  "bugs": {
    "url": "https://github.com/MagikIO/Magik/issues"
  },
  "homepage": "https://github.com/MagikIO/Magik#readme",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.28.1",
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@changesets/cli": "^2.29.8",
    "typescript": "^5.3.3",
    "vitest": "^4.0.16"
  }
}
